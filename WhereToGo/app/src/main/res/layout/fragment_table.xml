<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/light_grey"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:weightSum="8">

            <Button
                android:id="@+id/btn_table_list_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/img_left"
                android:textSize="30sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_table"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6" />

            <Button
                android:id="@+id/btn_table_list_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/img_right"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/light_grey"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="11">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_dark_grey"
                android:padding="0dp"
                android:text="이동"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_dark_grey"
                android:padding="0dp"
                android:text="분할"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_dark_grey"
                android:padding="0dp"
                android:text="단체"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_dark_grey"
                android:padding="0dp"
                android:text="예약관리"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_dark_grey"
                android:padding="0dp"
                android:text="대기접수"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_dark_grey"
                android:padding="0dp"
                android:text="웹정보"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_dark_grey"
                android:padding="0dp"
                android:text="영수증관리"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_dark_grey"
                android:padding="0dp"
                android:text="재출력"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_dark_grey"
                android:padding="0dp"
                android:text="환전"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_dark_grey"
                android:padding="0dp"
                android:text="간이영수증"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_dark_grey"
                android:padding="0dp"
                android:text="판매현황"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />
        <GridView
            android:id="@+id/grid_main_table"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="7"
            android:numColumns="5"
            android:verticalSpacing="10dp" />
    </LinearLayout>
</LinearLayout>